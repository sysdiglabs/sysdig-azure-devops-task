{
    "$schema": "https://raw.githubusercontent.com/Microsoft/azure-pipelines-task-lib/master/tasks.schema.json",
    "id": "5e925c66-5756-4f05-9238-258072d441c8",
    "name": "Sysdig",
    "friendlyName": "Sysdig Secure Image Scanning",
    "description": "Scan images with Sysdig Secure as part of your development pipeline.",
    "helpMarkDown": "",
    "category": "Utility",
    "author": "Sysdig",
    "version": {
        "Major": 0,
        "Minor": 6,
        "Patch": 0
    },
    "groups": [
        {
            "name": "overrides",
            "displayName": "Override Sysdig Defaults",
            "isExpanded": false
        }
    ],
    "instanceNameFormat": "Sysdig Secure Image Scanning",
    "inputs": [
        {
            "name": "sysdigurl",
            "type": "pickList",
            "label": "Sysdig Sysdig Secure SaaS Reion.",
            "defaultValue": "https://secure.sysdig.com",
            "options": {
                "https://secure.sysdig.com": "US East (https://secure.sysdig.com)",
                "https://us2.app.sysdig.com": "US West (https://us2.app.sysdig.com)",
                "https://app.us4.sysdig.com": "US West - GCP (https://app.us4.sysdig.com)",
                "https://eu1.app.sysdig.com": "European Union (https://eu1.app.sysdig.com)",
                "https://app.au1.sysdig.com": "Asia Pacific (https://app.au1.sysdig.com)"
            },
            "required": true,
            "helpMarkDown": "Sysdig Secure Region. Default to Sysdig Secure US East (https://secure.sysdig.com)"
        },
        {
            "name": "apikey",
            "type": "string",
            "label": "Sysdig Secure API Token",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Sysdig Secure API token for authentication."
        },
        {
            "name": "image",
            "type": "string",
            "label": "Full Image Tag",
            "defaultValue": "$(imageName):$(tag)",
            "required": true,
            "helpMarkDown": "Image to be scanned <repo/image:tag>."
        },
        {
            "name": "malware",
            "type": "boolean",
            "label": "Enable Malware Scanning",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "Perform Inline Malware Scanning."
        },
        {
            "name": "failBuild",
            "type": "boolean",
            "label": "Fail the build on policy evaulation",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "Fail the build if policy evaluation returns a fail."
        },
        {
            "name": "skipTLS",
            "type": "boolean",
            "label": "Skip TLS verification",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "Skip TLS verification when calling Sysdig endpoints."
        },
        {
            "name": "verbose",
            "type": "boolean",
            "label": "Verbose logging output",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "More verbose logging output from the Sysdig Inline Scanner."
        },
        {
            "name": "internalRegistry",
            "type": "string",
            "label": "Sysdig Inline Scanning Image (registry/repo/image:tag)",
            "defaultValue": "",
            "required": false,
            "helpMarkDown": "Pull Sysdig Inline Scanning image from custom registry. Supported image must be used (quay.io/sysdig/secure-inline-scan)",
            "groupName": "overrides"
        },
        {
            "name": "privileged",
            "type": "boolean",
            "label": "Enable User Root and Privileged Mode",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "Docker options maybe required depending on the access permissions for /var/run/docker.sock",
            "groupName": "overrides"
        },
        {
            "name": "techPreview",
            "type": "boolean",
            "label": "Sysdig Scanning Engine (Tech Preview)",
            "defaultValue": false,
            "required": false,
            "helpMarkDown": "Use Sysdig Scanning Engine (Tech Preview) - https://docs.sysdig.com/en/docs/sysdig-secure/scanning/new-scanning-engine/",
            "groupName": "overrides"
        }
    ],
    "execution": {
        "Node10": {
            "target": "dist/index.js"
        }
    }
}